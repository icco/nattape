<div class="info">
  <h1><%= @playlist.name %></h1>
  <h2><%= @playlist.description %></h2>
  <h3><%= @playlist.count %> songs, <%= format_seconds @playlist.play_length %></h3>
  <div>
    <%= link_to "Edit", url(:playlist, :edit, @playlist.url) %>
  </div>
</div>

<ul class="songs">
  <% @playlist.songs.each do |song| %>
    <li class="song" id="song<%= song.id %>">
    <div class="name">
      <%= song.artist %> - <%= song.title %>
    </div>

    <div>
      <a class="mp3" href="<%= song.file.url %>" target="_blank">File</a>
    </div>

    <div>
      <audio controls="controls">
      <source src="<%= song.file.url %>" type="audio/mpeg" />
      </audio>
    </div>

    <div class="info">
      <div class="clock"></div> <strong><%= format_seconds song.length %></strong>
    </div>

    </li>
  <% end %>
</ul>
